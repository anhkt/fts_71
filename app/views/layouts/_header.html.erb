<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.header.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layout.header.home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layout.header.contributes"), "#" %></li>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layout.header.allusers"), admin_users_path %></li>
            <li><%= link_to t("layout.header.subject"), admin_subjects_path %></li>
          <% else %>
            <%= link_to t("layout.header.user"), current_user.name %>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layout.header.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.header.profile"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li><%= link_to t("layout.header.logout"), logout_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
