<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="modal-header"><h1><%= yield :modal_title %></h1></div>
      <%= form_for [:admin, @subject, @question] do |f| %>
      <div class="modal-body">
        <div class="form_errors">
          <%= render "shared/error_messages", object: @question %>
        </div>
        <div class="form-group">
          <%= f.label :subject_id %>
          <%= f.collection_select :subject, @subjects, :id, :name %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: "form-control" %>
        </div>
        <div id ="answers_field">
          <%= f.fields_for :answers do |answer_builder| %>
            <%= render "answer_fields", f: answer_builder %>
          <% end %>
          <div id ="answer_field">
          </div>
          <div class="add_fields">
            <%= link_to_add_fields t("admin.answer.add"), f, :answers %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <span class="pull-right">
          <%= f.submit t("admin.question.create"), class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
